/*Factorial of n using recursion*/
#include <stdio.h>
int fact(int n);
int main()
{
    int n;
    printf("Enter a natural number: ");
    scanf("%d",&n);
    if(n < 1)
    {
        printf("INVALID Value!! Enter a natural number above 1");
        return 1;
    }
    printf("Factorial of %d is : %d", n ,fact(n));
    return 0;
}
int fact(int n)
{
    if(n == 1)
    {
        return 1;
    }
    else{
        return n * fact(n - 1);
    }
}
