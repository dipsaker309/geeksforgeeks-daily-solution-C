/*Swap two numbers using pointer*/
#include<stdio.h>
void swapnum(int *a , int *b);
int main()
{
    int a , b;
    printf("Enter the values : ");
    scanf("%d %d", &a , &b); 
    printf("Before swapping : \n");
    printf("a = %d\n" , a);
    printf("b = %d\n" , b);
    swapnum(&a , &b);
    printf("After swapping : \n");
    printf("a = %d\n" , a);
    printf("b = %d\n" , b);
    return 0;
}
void swapnum(int *a , int *b){
    int temp = *a;
    *a = *b;
    *b = temp;
}
