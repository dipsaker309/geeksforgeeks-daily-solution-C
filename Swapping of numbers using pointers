/*Swapping numbers using pointers */
#include<stdio.h> 
void swapnum(int *x, int *y)
{
    int temp = *x;
    *x = *y;
    *y = temp; 

}
int main()
{
    int a, b;
    printf("Enter value of two numbers: ");
    scanf("%d %d",&a,&b);
    printf("Before swapping : \n");
    printf("\t value of a = %d \t ",a);
    printf("\t value of b = %d \t \n",b);
    swapnum(&a,&b);
    printf("After swapping : \n");
    printf("\t value of a = %d \t",a);
    printf("\t value of b = %d \t ",b);

}
