/*Reverse the array using pointer*/
#include<stdio.h>
int main()
{
    int arr[100] , n , i;
    int *start , *end , temp;
    printf("Enter the number of elements : ");
    scanf("%d",&n);
    printf("Enter array elements : ");
    for(i = 0; i < n; i++){
        scanf("%d ", &arr[i]);
    }
    printf("\nThe array is : ");
    for(i = 0;i < n; i++){
        printf("%d ", arr[i]);
    }
    start = arr;
    end = arr + n -1;
    while(start < end){
        temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
    printf("\nReverse array : ");
    for(i = 0; i < n; i++){
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}
