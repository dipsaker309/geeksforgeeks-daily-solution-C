/*Sum of elements of main diagonal of a matrix */
#include<stdio.h>
int main()
{
    int i, j, n , sum = 0;
    int issymmetric = 1;
    printf("Enter the size of the square matrix: ");
    scanf("%d", &n);
    int matrix[n][n];
    printf("Enter the matrix elements:\n");
    for(i = 0; i < n; i++){
        for(j = 0; j < n; j++){
            printf("matrix[%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }
    printf("The matrix is : \n");
       for(i = 0; i < n; i++){
        for(j = 0; j < n; j++){
            printf("%d ",matrix[i][j]);
        }
        printf("\n");
    }
    for(i = 0; i < n; i++){
        sum += matrix[i][i];
    }
    printf("Sum of the elements of main diagonal: %d",sum);
    return 0;
}
