/*Transpose matrices*/
#include<stdio.h>
int main()
{
    int arr[20][20] , trans[20][20];
    int row, col, i ,j;
    printf("Enter row number : ");
    scanf("%d",&row);
    printf("Enter colume number : ");
    scanf("%d",&col);
    for(i = 0; i < row; i++){
        for(j = 0; j < col; j++){
            printf("arr[%d][%d] : " , i , j);
            scanf("%d", &arr[i][j]);
        }
    }
    printf("\nOriginal array is : \n");
    for(i = 0; i < row; i++){
        for(j = 0; j < col; j++){
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
     for(i = 0; i < row; i++){
        for(j = 0; j < col; j++){
            trans[j][i] = arr[i][j];
        }
    }
    printf("\ntranspose array: \n");
    for(i = 0; i < col; i++){
        for(j = 0; j < row; j++){
            printf("%d ", trans[i][j]);
        }
        printf("\n");
    }

}
