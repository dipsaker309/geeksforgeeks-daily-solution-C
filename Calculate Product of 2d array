/*Calculate product of 2d array*/
#include<stdio.h>
int main()
{
    int A[100][100], B[100][100], C[100][100];
    int i , j , k, sum , rowA, columnA, rowB, columnB;
    printf("Enter the row number of Array A : ");
    scanf("%d" , &rowA);
    printf("Enter the column number of Array A : ");
    scanf("%d" , &columnA);
    printf("Enter the row number of Array B : ");
    scanf("%d" , &rowB);
    printf("Enter the column number of Array B : ");
    scanf("%d" , &columnB);
    if(columnA != rowB)
    {
        printf("Invalid array dimensions");
        return 1;
    }
    for(i = 0 ; i < rowA ; i++)
    {
        for(j = 0; j < columnA ; j++)
        {
            printf("A[%d][%d] : ",i,j);
            scanf("%d" , &A[i][j]);
        }
    }
    for(i = 0; i < rowB ; i++){
        for(j = 0; j < columnB ; j++){
            printf("B[%d][%d] : ",i , j);
            scanf("%d", &B[i][j]);
        }
    }
    printf("Array A is : \n");
    for(i = 0; i < rowA ; i++){
        for(j = 0; j < columnA; j++)
        {
            printf( "%d ", A[i][j]);
        }
        printf("\n");
    }
        printf("\nArray B is : \n");
    for(i = 0; i < rowB ; i++){
        for(j = 0; j < columnB; j++)
        {
            printf( "%d ", B[i][j]);
        }
        printf("\n");
    }
    for(i = 0; i < rowA ; i++)
    {
        
        for(j = 0; j < columnB ; j++){
            sum = 0;
            for(k = 0 ; k < columnA ; k++){

            
            sum += A[i][k] * B[k][j];
            }
            C[i][j] = sum;
            
        }
        
    }
    printf("The product of Array A and B : \n");
    for(i = 0; i < rowA ; i++)
    {
        
        for(j = 0; j < columnB ; j++){
            printf("%d ",C[i][j]);
        }
        printf("\n");
    }
  
  
}
