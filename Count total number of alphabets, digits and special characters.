/*Count digits , uppercase, lowercase, special case of a string*/
#include<stdio.h>
#include<string.h>
int main()
{
    char str[100];
    int i = 0;
    printf("Enter the string : ");
    fgets(str , sizeof(str) , stdin);
    int digits = 0, uppercase = 0, lowercase = 0, splch = 0; // whitespace is special character
    while(str[i] != 0){
        if(str[i] >= '0' && str[i] <= '9')
        {
            digits++;
        }
        if(str[i] >= 'a' && str[i] <= 'z'){
            lowercase++;
        }
        if(str[i] >= 'A' && str[i] <= 'Z'){
            uppercase++;
        }
        else{
            splch++;
        }
        i++;
    }
    printf("Number of digits : %d\n",digits);
    printf("Number of uppercase : %d\n", uppercase);
    printf("Number of lowercase : %d\n",lowercase);
    printf("Number of special character : %d\n", splch);

}
